<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="agilemind-0.0.1-story" author="Knife">
        <createSequence sequenceName="story_seq" startValue="1" incrementBy="1"/>

        <createTable tableName="story">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="description" type="VARCHAR(65000)">
                <constraints nullable="true"/>
            </column>
            <column name="points" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="business_value" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="status_id" type="BIGINT">
                <constraints foreignKeyName="fk_status_id_story_status_id" referencedTableName="story_status" referencedColumnNames="id" nullable="false"/>
            </column>
            <column name="assignated_user_id" type="BIGINT">
                <constraints foreignKeyName="fk_assignated_user_id_jhi_user_id" referencedTableName="jhi_user" referencedColumnNames="id" nullable="true"/>
            </column>
            <column name="project_id" type="BIGINT">
                <constraints foreignKeyName="fk_project_id_project_id_2" referencedTableName="project" referencedColumnNames="id" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
